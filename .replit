entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["arrow-cpp", "freetype", "glibcLocales", "libxcrypt", "pkg-config"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "IA Fiscal App"

[[workflows.workflow]]
name = "IA Fiscal App"
author = 29295454
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --mode=full"

[[workflows.workflow]]
name = "Dashboard Only"
author = 29295454
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_dashboard_only.py"

[[ports]]
localPort = 8000
externalPort = 80
