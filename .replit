entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["arrow-cpp", "freetype", "glibcLocales", "libxcrypt", "pkg-config"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "IA Fiscal App"

[[workflows.workflow]]
name = "IA Fiscal App"
author = 29295454
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --mode=full"

[[workflows.workflow]]
name = "Dashboard Only"
author = 29295454
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_dashboard_only.py"

[[workflows.workflow]]
name = "Simple Dashboard"
author = 29295454
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run simple_streamlit.py --server.port=8501 --server.address=0.0.0.0 --server.headless=true"

[[workflows.workflow]]
name = "Reliable Dashboard"
author = 29295454
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run streamlit_dashboard.py --server.port=8501 --server.address=0.0.0.0 --server.headless=true --server.enableCORS=false --server.enableXsrfProtection=false"

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 8501
externalPort = 3000
